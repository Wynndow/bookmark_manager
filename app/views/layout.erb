<!DOCTYPE html>
<html>
<head>
  <title>Bookmark Manager</title>
</head>
<body>
  <%if current_user%>
    <div id='welcome'>Welcome, <%=@current_user.username%></div>
  <%end%>
  <%if flash[:errors]%>
    <div id="errors">
      <ul>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
        </ul>
    </div>
  <%end%>
  <%=yield%>
</body>
</html>
